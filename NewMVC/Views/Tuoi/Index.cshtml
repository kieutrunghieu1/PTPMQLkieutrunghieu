
@model NewMVC.Models.Tuoi

@{
    ViewData["Title"] = "Tính tuổi";
}

<h2>Tính tuổi</h2>

<form asp-action="Index" method="post">
    <div class="mb-3">
        <label asp-for="HoTen" class="form-label"></label>
        <input asp-for="HoTen" class="form-control" />
    </div>

    <div class="mb-3">
        <label asp-for="NamSinh" class="form-label"></label>
        <input asp-for="NamSinh" class="form-control" type="number" />
    </div>

    <button type="submit" class="btn btn-primary">Tính tuổi</button>
</form>

@if (Model != null && Model.TuoiTinh > 0)
{
    <div class="alert alert-info mt-3">
        @Model.HoTen năm nay @Model.TuoiTinh tuổi.
    </div>
}
